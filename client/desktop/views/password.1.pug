extends layout/header
block content

    div(class="section")
        div(class="container")

            div(class="page-wrapper")

                div(class="page-main")
                    h2 Modifica password

                    <pm-form action="/user/doUpdatePassword">
                        <pm-form-field label="Password attuale", type="password", name="act-pwd", required="required"></pm-form-field>
                        <pm-form-field label="Nuovapassword", type="password", name="new-pwd", required="required"></pm-form-field>
                        <pm-form-field label="Conferma nuova password", type="password", name="new-pwd-confirm", required="required"></pm-form-field>
                        <pm-form-button class="blue">Modifica password</pm-form-button>
                    </pm-form>

                    div(class="form-wrapper")
                        form(action="/user/doUpdatePassword" method="post")
                            div(class="form-row")
                                label Password attuale
                                input(placeholder="Password attuale", type="password", name="act-pwd", required="required")
                            div(class="form-row")
                                label Nuova password
                                input(placeholder="Nuova password", type="password", name="new-pwd", required="required")
                            div(class="form-row")
                                label Conferma nuova password
                                input(placeholder="Conferma nuova password", type="password", name="new-pwd-confirm", required="required")
                                    
                            div(class="form-row-button")
                                button(class="blue" type="button" onclick="sendForm(this)") Modifica password

                div(class="page-right")